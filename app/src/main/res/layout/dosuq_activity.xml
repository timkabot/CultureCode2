<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <android.support.v7.widget.CardView
            card_view:cardCornerRadius="12dp"
            style="@style/card_view_dosuq"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="247dp"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/imageView_banya"
                    android:src="@drawable/banya"
                    style="@style/image_view_dosuq"
                    />

                <TextView
                    android:id="@+id/textView"
                    android:text="Sauna"
                    style="@style/text_desc_dosuq"
                    android:layout_above="@+id/textView2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    />

                <TextView
                    android:text="После тяжелого дня в кругу весёлых голых друзей можно отдуши расслабиться"
                    android:id="@+id/textView2"
                    style="@style/dosuq_descr"
                    android:layout_below="@+id/imageView_banya"
                    android:layout_centerHorizontal="true"
                    />

            </RelativeLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            style="@style/card_view_dosuq"
            card_view:cardCornerRadius="12dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="247dp"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/imageView_sport"
                    android:src="@drawable/sport"
                    style="@style/image_view_dosuq"
                    />

                <TextView
                    android:id="@+id/textView_sport"
                    android:text="Sport center"
                    style="@style/text_desc_dosuq"
                    android:layout_above="@+id/text_sport"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    />

                <TextView
                    android:text="Спортсмен? Красавчик! Прихоиде и занимайся всем, чем захочешь!=)"
                    android:id="@+id/text_sport"
                    style="@style/dosuq_descr"
                    android:layout_below="@+id/imageView_sport"
                    android:layout_centerHorizontal="true"
                    />

            </RelativeLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            style="@style/card_view_dosuq"
            card_view:cardCornerRadius="12dp"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="247dp"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/imageView_bar"
                    android:src="@drawable/bar"
                    style="@style/image_view_dosuq"
                    />

                <TextView
                    android:id="@+id/textView_bar"
                    android:text="Bar 108"
                    style="@style/text_desc_dosuq"
                    android:layout_above="@+id/textView3"
                    android:layout_alignRight="@+id/textView3"
                    android:layout_alignEnd="@+id/textView3"
                    />

                <TextView
                    android:text="Добираюсь до бара, я пытаюсь уйти от их радара"
                    android:id="@+id/textView3"
                    style="@style/dosuq_descr"
                    android:layout_below="@+id/imageView_bar"
                    android:layout_centerHorizontal="true"
                    />

            </RelativeLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            style="@style/card_view_dosuq"
            card_view:cardCornerRadius="12dp"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="247dp"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/imageView_mount"
                    android:src="@drawable/mount"
                    style="@style/image_view_dosuq"
                    />

                <TextView
                    android:id="@+id/textView_mount"
                    android:text="Горнолыжка"
                    style="@style/text_desc_dosuq"
                    android:layout_above="@+id/textView4"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    />

                <TextView
                    android:id="@+id/textView4"
                    android:text="Зимой всей семьёй вы можете с пользой и весельем провести время на замечательной горе Свияжск"
                    style="@style/dosuq_descr"
                    android:layout_below="@+id/imageView_mount"
                    android:layout_centerHorizontal="true"

                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>